extends ../layout

block content
    h1 Add  Course
    form(action="/courses/add",method="post")
        .form-group
            label(for="name") Name
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="id") ID
            input#id(type="text", class="form-control", name="id")
        .form-group
            label(for="duration") Duration
            input#duration(type="text", class="form-control", name="duration")
        .form-group
            label(for="fee") Fee
            input#fee(type="number", class="form-control", name="fee")
        input(type="submit", class="btn btn-info")
    